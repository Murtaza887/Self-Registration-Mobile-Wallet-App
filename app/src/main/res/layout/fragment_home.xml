<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    tools:context=".HomeFragment"
    android:layout_height="match_parent">

    <FrameLayout
        android:padding="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_bg"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="93dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:id="@+id/profilepic" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/name"
                android:hint="Murtaza Hassnain"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/profilepic"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="-165dp"
                android:hint="03345820814"
                android:id="@+id/number"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Rs."
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginStart="-155dp"
                android:layout_marginTop="90dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:hint="40000"
                android:textSize="20sp"
                android:id="@+id/money_amount"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="30dp"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="wrap_content"
                android:text="Add Money"
                android:backgroundTint="#FF0000"
                android:layout_marginLeft="-210dp"
                android:layout_marginTop="140dp"
                android:id="@+id/addMoney"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_baseline_add_24"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_width="wrap_content"
                android:text="Account"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="140dp"
                android:backgroundTint="#808080"
                android:id="@+id/accountButton"
                android:textColor="@color/white"
                android:drawableLeft="@drawable/ic_baseline_account_circle_24"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:text="Promotions"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="130dp"
            android:layout_marginTop="250dp"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/favorites"
            android:layout_marginTop="290dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Favorites"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="130dp"
            android:layout_marginTop="530dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="100dp"
            android:src="@drawable/send_money"
            android:id="@+id/send_Money"
            android:layout_marginTop="580dp"
            android:layout_height="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Send Money"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="680dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="100dp"
            android:src="@drawable/settings"
            android:layout_marginStart="130dp"
            android:layout_marginTop="580dp"
            android:id="@+id/settings"
            android:layout_height="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="680dp"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="100dp"
            android:src="@drawable/add_button"
            android:layout_marginStart="270dp"
            android:id="@+id/add_Money"
            android:layout_marginTop="580dp"
            android:layout_height="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_marginTop="680dp"
            android:text="Add Money"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="100dp"
            android:src="@drawable/info"
            android:id="@+id/info"
            android:layout_marginTop="730dp"
            android:layout_height="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="About"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="840dp"
            android:layout_marginStart="30dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Shortcuts"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="120dp"
            android:layout_marginTop="880dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="100dp"
            android:src="@drawable/add_shortcut"
            android:id="@+id/shortcut"
            android:layout_marginTop="920dp"
            android:layout_height="100dp"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Â© 2021 EzMoney - All Rights Reserved. \nLast Updated : December 2021"
            android:textColor="@color/black"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="1080dp"
            android:layout_height="wrap_content"/>

    </FrameLayout>
</ScrollView>